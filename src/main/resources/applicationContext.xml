  <bean id="logAdvice" class="cn.mjl.service.springAop.LogAdvice"/>
  <bean id="serviceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="interfaces" value="cn.mjl.service.springAop.Service"/>
    <property name="interceptorNames">
      <list>
        <value>logAdvice</value>
      </list>
    </property>
    <property name="target" ref="serverImpl"/>
